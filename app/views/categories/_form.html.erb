<h2><%= t "categories.index.title" %></h2>
<ul class="list-group">
  <% @categories.each do |category| %>
    <li class="list-group-item">
      <span class="tag pull-right">
        <%= category.books.size %>
      </span>
      <%= link_to category.name, category_path(category) %>
    </li>
  <% end %>
</ul>
