<% provide :title, t(".title") %>
<h1><%= t ".title" %></h1>

<%= link_to t(".new"), new_admin_category_path, class: "btn btn-success" %>

<table class="table table-hover">
  <tr>
    <th><%= t ".stt" %></th>
    <th><%= t ".name" %></th>
    <th><%= t ".action" %></th>
  </tr>
  <% @categories.each.with_index do |category, index| %>
    <tr>
      <td><%= index + 1 %></td>
      <td><%= link_to category.name %></td>
      <td>
        <span>
          <%= link_to t(".edit_button"), edit_admin_category_url(category),
            class: "btn btn-default editButton" %>
          <%= link_to t(".delete_button"), admin_category_url(category),
            method: :delete, data: {confirm: t(".sure")},
            class: "btn btn-danger" %>
        </span>
      </td>
    </tr>
  <% end %>
</table>
