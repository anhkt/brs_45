<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(".logo"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t(".home"), "/static_pages/home" %></li>
        <% if user_signed_in? %>
          <% if current_user.is_admin? %>
            <li><%= link_to t(".category"), admin_categories_path %></li>
          <% else %>
            <li><%= link_to t(".user"), "#" %></li>
          <% end %>
        <% else %>
          <li>
            <%= link_to t(".signup"), new_user_registration_path %>
          </li>
          <li>
            <%= link_to t(".login"), new_user_session_path %>
          </li>
        <% end %>
        <li>
          <%= link_to t(".logout"), destroy_user_session_path,
            method: :delete %>
        </li>
      </ul>
    </nav>
  </div>
</header>
